<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ListCardApp">

        <LinearLayout
            android:id="@+id/cardGenerico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



        <ImageView
            android:id="@+id/imgPessoa"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/semfoto"
            android:layout_weight="3"/>


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:orientation="vertical">
        <TextView
            android:id="@+id/txtView1"
            android:layout_width="match_parent"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="5dp"
            android:text="Sem Dados"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>


        <!-- Primeira linha dados -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:orientation="horizontal">

           <TextView
               android:id="@+id/txtTitulo1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginRight="5dp"
               android:text="sem dados"
               android:textStyle="bold"/>

            <TextView
               android:id="@+id/txtDados1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginRight="5dp"
               android:text="Sem Dados" />
                                                                                                                                                                                                                                                                                                                                                                                                                />

        </LinearLayout>


           <!-- Segunda linha dados -->

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="5dp"
               android:orientation="horizontal">
               <TextView
                   android:id="@+id/txtTitulo3"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="5dp"
                   android:text="sem dados"
                   android:textStyle="bold"/>

               <TextView
                   android:id="@+id/txtDados3"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="5dp"
                   android:text="Sem Dados" />
                                                                                                                                                                                                                                                                                                                                                                                                                 />

           </LinearLayout>

           <!-- Terceira linha dados -->

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="5dp"
               android:orientation="horizontal">

               <TextView
                   android:id="@+id/txtTitulo5"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="5dp"
                   android:text="sem dados"
                   android:textStyle="bold"/>

               <TextView
                   android:id="@+id/txtDados5"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="5dp"
                   android:text="Sem Dados" />
                                                                                                                                                                                                                                                                                                                                                                                                                  />

           </LinearLayout>

           <!-- Quarta linha dados -->

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="5dp"
               android:orientation="horizontal">

               <TextView
                   android:id="@+id/txtTitulo7"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="5dp"
                   android:text="sem dados"
                   android:textStyle="bold"/>

               <TextView
                   android:id="@+id/txtDados7"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="5dp"
                   android:text="Sem Dados" />


           </LinearLayout>
       </LinearLayout>
        </LinearLayout>
</LinearLayout>
